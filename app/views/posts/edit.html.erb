<h1>Edit Post </h1>
<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %></br>
    <%= f.text_field :title %></br>
  </p>
  <p>
    <%= f.label :body %></br>
    <%= f.text_area :body %></br>
  </p>
  <p>
    <%= f.label :category_id %></br>
    <%= f.collection_select(:category_id, @categories, :id, :name, :include_blank => "Please select") %>
  </p>
  <%= f.submit "Update Post" %>
<% end %>

<%= link_to "Back", posts_path %>
